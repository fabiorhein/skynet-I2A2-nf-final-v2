# SkyNET-I2A2 Configuration
# Copy this file to .env and configure your settings

# Google API Configuration (Required for chat system)
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration - PostgreSQL Native (Recommended)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=skynet_db
DB_USER=skynet_user
DB_PASSWORD=your_postgresql_password

# Alternative: Supabase Configuration (Legacy)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Tesseract OCR Configuration
# Linux/macOS
TESSERACT_PATH=/usr/bin/tesseract
TESSDATA_PREFIX=/usr/share/tesseract-ocr/5/tessdata

# Windows (uncomment if needed)
# TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
# TESSDATA_PREFIX=C:\Program Files\Tesseract-OCR\tessdata

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Application Settings
DEBUG=False
SECRET_KEY=your-secret-key-here

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Test Environment Variables
TEST_DB_HOST=localhost
TEST_DB_NAME=skynet_test_db
TEST_DB_USER=skynet_test_user
TEST_DB_PASSWORD=your_test_password
